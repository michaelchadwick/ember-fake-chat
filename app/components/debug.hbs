<details
  class="debug"
  {{on "click" this.saveDebugVisibility}}
>
  <summary>Component Debugging</summary>
  <div class="gallery">
    <DoubleIt />

    {{#if (eq this.env "production")}}
      <AudioPlayer
        @srcURL={{this.app.AUDIO_PLAYER_FILE_REMOTE}}
        @shouldLoop={{true}}
      />
    {{else}}
      <AudioPlayer
        @srcURL={{this.app.AUDIO_PLAYER_FILE_LOCAL}}
        @shouldLoop={{true}}
      />
    {{/if}}

    <GhUser
      @username={{@ghUsername}}
      @publicRepos={{@ghPublicRepos}}
    />
  </div>
</details>