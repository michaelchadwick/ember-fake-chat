<h2>{{t "layout.headMusic"}}</h2>
<p>{{t "sections.music.description"}}</p>
{{#if @model}}
  <ul>
    {{#each @model as |song|}}
      <li>
        <a href={{song.url}} target="_blank" rel="noopener noreferrer">
          {{song.title}}
        </a>
        from
        <strong>{{song.album}}</strong>
        by
        <em>{{song.artist}}</em>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>{{t "general.noneFound" items="songs"}}</p>
{{/if}}